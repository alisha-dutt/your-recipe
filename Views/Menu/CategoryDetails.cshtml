@model IEnumerable<YourRecipe.Models.Recipe>
@{
    ViewData["Title"] = "Categories";
}
<h1 class="display-1"> What shall we have today?</h1>
<section>
    @foreach (var category in Model)
    {
    <div class="card" style="width: 22rem;">
        <img class="card-img-top rounded mx-auto d-block">
        <div class="card-body">
            <h2 class="card-title">@category.Name</h2>
            <h5 class="card-title"> By- @category.Creator</h5>
            <p class="card-text">@category.Steps</p>
            <a asp-action="Recipes" class="btn btn-primary">Back to List</a>
        </div>
        </div>
   }
</section>